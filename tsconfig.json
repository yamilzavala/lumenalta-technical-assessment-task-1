{
  "compilerOptions": {
    "target": "ES2020", // Versión de JS a la que quieres compilar
    "module": "ES2020", // Compatibilidad con módulos ESM
    "rootDir": "./src", // Carpeta donde están los archivos .ts
    "outDir": "./dist", // Carpeta de salida para los archivos .js compilados
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"], // Archivos TS a incluir
  "exclude": ["node_modules"] // Excluir node_modules
}

